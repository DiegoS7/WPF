            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lbltexto" Content="Hola Juancho" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="353,166,0,0" Background="#FF99E415"/>
        <TextBox x:Name="txtnombre" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="Pon tu nombre aqui" VerticalAlignment="Top" Width="120" Margin="252,90,0,0" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="boton" Content="Picame" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="210,172,0,0" Click="Boton_Click"/>

    </Grid>
</Window>
